<h1>Welcome to our Agency directory!</h1>

<h2>The long list: </h2>

<ul>
  <% @agencies.each do |agency| %>
    <li>
      <h3><%= agency.name %></h3>
      <p><%= agency.description %></p>
      <p><%= agency.address %></p>
      <p><%= link_to "Show", agency_path(agency) %>  <%= link_to "Edit", edit_agency_path(agency) %></p>
      <!-- <p><%= link_to "DELETE", edit_agency_path(agency) %></p> -->
    </li>
<!--       <li><%= agency[:name] %> (<%= agency[:address] %>)</li> -->
  <% end %>
</ul>


